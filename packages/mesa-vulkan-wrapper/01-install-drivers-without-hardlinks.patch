import argparse
import os
import shutil

# Compatibilitate Termux/Android: înlocuiește hardlink cu copiere
def safe_link(src, dest):
    try:
        shutil.copyfile(src, dest)
    except Exception as e:
        print(f"Failed to copy '{src}' to '{dest}': {e}")

def safe_unlink(path):
    try:
        os.remove(path)
    except FileNotFoundError:
        pass
    except Exception as e:
        print(f"Failed to remove '{path}': {e}")

# Suprascrie funcțiile problematice
os.link = safe_link
os.unlink = safe_unlink
